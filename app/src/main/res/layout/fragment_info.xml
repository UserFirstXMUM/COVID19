<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="20dp"
                    android:theme="@style/Theme.MaterialComponents"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Helpful Video"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#5666BD"
                            android:textSize="21sp" />

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="300dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="140dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="30dp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                app:srcCompat="@android:drawable/ic_media_play" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Don't let it up"
                                    android:textColor="#5666BD"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="chain reation it to line up."
                                    android:textColor="#BBBBBB"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="10/11/2020"
                                    android:textColor="#BBBBBB"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="140dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="30dp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                app:srcCompat="@android:drawable/ic_media_play" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Don't let it up"
                                    android:textColor="#5666BD"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="chain reation it to line up."
                                    android:textColor="#BBBBBB"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="10/11/2020"
                                    android:textColor="#BBBBBB"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:theme="@style/Theme.MaterialComponents"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Health Awareness Reminder"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#5666BD"
                            android:textSize="21sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/p1"
                                    android:layout_width="160dp"
                                    android:layout_height="160dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/p3" />

                                <TextView
                                    android:id="@+id/t1"
                                    android:layout_width="160dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:text="How to prevent COVID19?"
                                    android:textColor="#5666BD" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/p2"
                                    android:layout_width="160dp"
                                    android:layout_height="160dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/p2" />

                                <TextView
                                    android:id="@+id/t2"
                                    android:layout_width="160dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:text="Things to know about COVID19"
                                    android:textColor="#5666BD" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/context1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Youâ€™re probably really worried about the new COVID-19 coronavirus, especially if there are confirmed cases near you. Fortunately, you can take action to protect yourself and your family from contracting the infection. Simple things like staying home whenever possible, avoiding sick people, washing your hands often, and disinfecting high-touch surfaces can help you stay well. If you suspect you may be sick, call your doctor or your local health department immediately. Then, stay home until they tell you to seek medical care."
                            android:textColor="#070707"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/context2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Pets have not been found to spread COVID-19; Chloroquine Phosphate is not a specific treatment but definitely helps recovery; It is vital to keep waste pipes unobstructed; There is no need to disinfect the soles of your shoes; Wipe your phone with antiseptic wipes after going out; Vegetables and meats are unlikely to carry COVID-19; Air purifiers cannot filter viruses; People with a temperature and cough are still forbidden to take public transport; Cold dishes, sushi, stir-fried dishes with eggs should be avoided when ordering foods; Only seated tickets being sold on the railways; Confirmed and suspected patients must not wear masks with respirators; Recovered patients can donate plasma two weeks after recovery."
                            android:textColor="#070707"
                            android:visibility="gone" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:theme="@style/Theme.MaterialComponents"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Q: Have you gone to shopping mall recently?"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#5666BD"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="282dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="View the answer"
                                android:textColor="#5666BD"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/la1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_arrow_down" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="No, or yes but I checked the temperature every time."
                            android:textColor="#070707"
                            android:textSize="18sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/q2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="80dp"
                    android:theme="@style/Theme.MaterialComponents"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <TextView
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Q: What is your physical temperature now?"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#5666BD"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="282dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="View the answer"
                                android:textColor="#5666BD"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/la2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_arrow_down" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Temperature over 37.2 degrees should be taken seriously."
                            android:textColor="#070707"
                            android:textSize="18sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>