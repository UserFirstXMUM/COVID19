<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="86dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_username_mine"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="111dp"
                android:layout_marginBottom="100dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:maxLines="1"
                android:text='Register/Log in'
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="24dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_channel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_dailyreport"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#9CFFFFFF">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Daily Report Calendar"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="360dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="center"
                        android:src="@drawable/baseline_calendar_today_black_18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_trip_record"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#9CFFFFFF">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="360dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="center"
                        android:src="@drawable/baseline_commute_black_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Trip Record"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rela_qrcode_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#9CFFFFFF">


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="360dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="center"
                        android:src="@drawable/baseline_qr_code_scanner_black_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="QR Code Scanner"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_personal_information"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#9CFFFFFF">


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="360dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="center"
                        android:src="@drawable/baseline_calendar_today_black_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Personal Information"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_logout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#9CFFFFFF">


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginRight="360dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="center"
                        android:src="@drawable/baseline_exit_to_app_black_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Log Out"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>